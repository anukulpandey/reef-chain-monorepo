{
  "name": "evm-provider",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/evm-provider/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "commands": [
          "rm -rf build",
          "rm tsconfig.tsbuildinfo",
          "polkadot-dev-build-ts",
          "cp yarn.lock build/yarn.lock"
        ],
        "outputPath": "libs/evm-provider/build"
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs evm-provider {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/libs/evm-provider"
      }
    }
  },
  "tags": []
}
